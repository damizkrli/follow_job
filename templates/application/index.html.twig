{% extends 'base.html.twig' %}
{% block title %}Mes candidatures{% endblock %}
{% import 'pagination/tailwind_pagination.html.twig' as macros %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Mes Candidatures</h1>

    <div class="flex flex-col sm:flex-row gap-3">
      <button 
        type="button"
        onclick="openModalCreateApplication()"
        class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded shadow transform transition-transform duration-150 hover:scale-105">
        <span class="material-symbols-outlined text-base mr-2 leading-none">add_circle</span>
        Ajouter une candidature
      </button>

      <button 
        type="button"
        onclick="openModalRefusedApplications()"
        class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded shadow transform transition-transform duration-150 hover:scale-105">
        <span class="material-symbols-outlined text-base mr-2 leading-none">block</span>
        Voir les candidatures refusées
      </button>

    </div>
  </div>

  <div class="overflow-x-auto bg-white dark:bg-gray-900 shadow-md rounded">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700 text-sm text-left">
      <thead class="bg-gray-50 dark:bg-gray-800">
        <tr>
          <th class="px-4 py-3 font-medium text-gray-600 dark:text-gray-300">Intitulé du poste</th>
          <th class="px-4 py-3 font-medium text-gray-600 dark:text-gray-300">Date d'envoi</th>
          <th class="px-4 py-3 font-medium text-gray-600 dark:text-gray-300">Lien</th>
          <th class="px-4 py-3 font-medium text-gray-600 dark:text-gray-300">Entreprise</th>
          <th class="px-4 py-3 font-medium text-gray-600 dark:text-gray-300">Job Board</th>
          <th class="px-4 py-3 text-right font-medium text-gray-600 dark:text-gray-300"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
        {% for application in pagination %}
        <tr class="hover:bg-gray-50 dark:hover:bg-gray-800">
          <td class="px-4 py-2 text-gray-800 dark:text-gray-100">{{ application.jobtitle }}</td>
          <td class="px-4 py-2 text-gray-800 dark:text-gray-100">
            {{ application.sent ? application.sent|date('d/m/Y') : '' }}
          </td>
          <td class="px-4 py-2 max-w-xs">
            <a
              href="{{ application.link }}"
              target="_blank"
              rel="noopener noreferrer"
              title="{{ application.link }}"
              class="inline-flex items-center gap-1 text-blue-600 hover:underline truncate max-w-[180px]"
            >
              <span class="truncate">{{ application.link }}</span>
              <span class="material-symbols-outlined text-sm">open_in_new</span>
            </a>
          </td>
          <td class="px-4 py-2 text-gray-800 dark:text-gray-100">
            {{ application.company ?? "--" }}
          </td>
          <td class="px-4 py-2 text-gray-800 dark:text-gray-100">{{ application.jobboard }}</td>
          <td class="px-4 py-2 text-right">
            <div class="relative inline-block text-left">
              <button
                type="button"
                data-dropdown-button
                class="inline-flex items-center justify-center w-8 h-8 rounded-full text-gray-600 hover:text-black dark:text-gray-300 dark:hover:text-white focus:outline-none"
                aria-haspopup="true"
                aria-expanded="false"
              >
                <span class="material-symbols-outlined text-base">more_vert</span>
              </button>

              <div
                class="dropdown-menu hidden absolute right-0 mt-2 w-44 rounded-md shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 z-10"
                role="menu"
              >
                <div class="py-1">
                  <a
                    href="javascript:void(0);"
                    onclick="openModalShowApplication({{ application.id }})"
                    class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 dark:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <span class="material-symbols-outlined text-base">info</span> Consulter
                  </a>
                  <a
                    href="javascript:void(0);"
                    onclick="openModalEditApplication({{ application.id }})"
                    class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 dark:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-700"
                  >
                    <span class="material-symbols-outlined text-base">edit</span> Modifier
                  </a>
                  <form
                    method="post"
                    action="{{ path('app_application_delete', { id: application.id }) }}"
                    onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');"
                  >
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ application.id) }}" />
                    <button
                      type="submit"
                      class="flex items-center gap-2 w-full px-4 py-2 text-sm text-red-600 hover:bg-red-50 dark:hover:bg-gray-700"
                    >
                      <span class="material-symbols-outlined text-base">delete</span> Supprimer
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </td>
        </tr>

        {% include 'tools/modalEditApplication.html.twig' with { application: application } %}
        {% include 'tools/modalShowApplication.html.twig' with { application: application } %}

        {% else %}
        <tr>
          <td
            colspan="7"
            class="px-4 py-4 text-gray-500 dark:text-gray-400 italic flex items-center gap-2"
          >
            <span class="material-symbols-outlined rotate-90">subdirectory_arrow_right</span>
            Aucune candidature enregistrée.
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {{ macros.render_pagination(pagination) }}
  {% include 'tools/modalApplications.html.twig' %}
  {% include 'tools/modalRefusedApplication.html.twig' %}

</div>

{% endblock %}

{% extends 'base.html.twig' %} {% block title %}Modifier un contact{% endblock
%} {% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Modifier le contact</h1>

  {{ form_start(form) }}

  <div class="space-y-12">
    <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-base font-semibold text-gray-900">
        Informations du contact
      </h2>
      <p class="mt-1 text-sm text-gray-600">
        Modifiez les informations du contact si n√©cessaire.
      </p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-3">
          {{ form_row(form.firstname) }}
        </div>
        <div class="sm:col-span-3">
          {{ form_row(form.lastname) }}
        </div>
        <div class="sm:col-span-4">
          {{ form_row(form.email) }}
        </div>
        <div class="sm:col-span-2">
          {{ form_row(form.phone) }}
        </div>
        <div class="sm:col-span-4">
          {{ form_row(form.social) }}
        </div>
        {% if form.company is defined %}
        <div class="sm:col-span-4">
          {{ form_row(form.company) }}
        </div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <a
      href="{{ path('app_contact_index') }}"
      class="text-sm font-semibold text-gray-900"
      >Annuler</a
    >
    <button
      type="submit"
      class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500"
    >
      {{ button_label|default('Enregistrer') }}
    </button>
  </div>

  {{ form_end(form) }}
</div>
{% endblock %}

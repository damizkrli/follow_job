{% extends 'base.html.twig' %}

{% block title %}FOLLOW JOB{% endblock %}

{% block body %}
<div class="p-8 bg-gray-100 dark:bg-gray-900 min-h-screen text-gray-900 dark:text-gray-100">

  <div class="flex flex-col sm:flex-row items-center justify-between bg-blue-50 dark:bg-green-950 border border-green-200 dark:border-green-800 text-green-800 dark:text-green-100 px-4 py-3 rounded-lg shadow mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center gap-4 sm:gap-6 text-center">
      {% include "home/count.html.twig" %}
    </div>

    {% include 'home/links.html.twig' with { external_links: external_links, form: form } %}
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <div class="flex flex-col bg-white dark:bg-gray-800 rounded-xl shadow p-4 h-full">
      <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-2">Offre France Travail</h2>
      <div class="flex-1 text-gray-800 dark:text-gray-200">
      {% if not apiError %}
        {% include "home/API/francetravail.html.twig" %}
      {% else %}
        <div class="text-sm text-red-700 dark:text-red-300 bg-red-50 dark:bg-red-800 p-4 rounded border border-red-300 dark:border-red-700">
          Le service France Travail est, indépendamment de notre volonté, temporairement inaccessible.
        </div>  
      {% endif %}      
      </div>
    </div>

    <div class="lg:col-span-2 flex flex-col gap-6">

      <div class="flex flex-col bg-white dark:bg-gray-800 rounded-xl shadow p-4 h-full">
        <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-2">Évènement France Travail</h2>
        <div class="flex-1 text-gray-800 dark:text-gray-200">
          <p class="text-sm text-gray-500 dark:text-gray-300 italic">Fonctionnalité à venir ...</p>
        </div>
      </div>

      <div class="flex flex-col bg-white dark:bg-gray-800 rounded-xl shadow p-4 h-full">
        <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-2">API Marché du travail</h2>
        <div class="flex-1 text-gray-800 dark:text-gray-200">
          <p class="text-sm text-gray-500 dark:text-gray-300 italic">Fonctionnalité à venir ...</p>
        </div>
      </div>
    
    </div>

  </div>
  
</div>



<script>
  document.addEventListener('click', function (event) {
    const dropdown = document.getElementById('dropdownMenu');
    const button = document.getElementById('dropdownButton');

    if (!dropdown || !button) return;

    if (!dropdown.contains(event.target) && !button.contains(event.target)) {
      dropdown.classList.add('hidden');
    }
  });
</script>

{% endblock %}

<ul class="space-y-4">
  {% for offer in offers %}
    <li class="p-4 border border-gray-200 dark:border-gray-700 rounded shadow bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-100">
      {% if offer.origineOffre.urlOrigine is defined %}
        <a
          href="{{ offer.origineOffre.urlOrigine }}"
          target="_blank"
          rel="noopener noreferrer"
          class="text-blue-600 dark:text-blue-400 hover:underline"
        >
          {{ offer.intitule }} <span aria-hidden="true">↗</span>
        </a>
      {% else %}
        <span class="text-gray-500 dark:text-gray-400">{{ offer.intitule }} (lien indisponible)</span>
      {% endif %}

      <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">
        {{ offer.entreprise.nom ?? "Entreprise non précisée" }} –
        {{ offer.lieuTravail.libelle ?? "Lieu inconnu" }}
      </p>
      <p class="text-sm mt-2 text-gray-500 dark:text-gray-400">
        <strong>Date :</strong> {{ offer.dateCreation|date('d/m/Y') }}
      </p>
    </li>
  {% else %}
    <li class="text-gray-500 dark:text-gray-300">Aucune offre trouvée.</li>
  {% endfor %}
</ul>

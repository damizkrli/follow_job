<div class="mb-2 p-4 rounded-lg shadow-lg w-full
    {{ app.session.get('dark_mode') ? 'bg-gray-800 text-white' : 'bg-white text-gray-800' }}">

    {{ form_start(searchForm, {'method': 'GET'}) }}
    <div class="grid grid-cols-1 md:grid-cols-7 gap-4 items-end">
        {% for field in [searchForm.jobTitle, searchForm.sent, searchForm.company, searchForm.jobboard, searchForm.city] %}
            <div>
                {{ form_label(field, null, {
                    'label_attr': {
                        'class': 'block text-sm font-medium mb-1' ~ (app.session.get('dark_mode') ? 'text-gray-200' : 'text-gray-700')
                    }
                }) }}
                {{ form_widget(field, {
                    'attr': {
                        'class': 'block w-full rounded-md border px-3 py-2 shadow-sm text-sm focus:ring focus:ring-blue-300' ~
                            (app.session.get('dark_mode')
                                ? 'bg-gray-700 border-gray-600 text-white placeholder-gray-400'
                                : 'bg-white border-gray-300 text-gray-900 placeholder-gray-400')
                    }
                }) }}
                {{ form_errors(field) }}
            </div>
        {% endfor %}

        <div class="md:col-span-2 flex justify-end items-center space-x-4">
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium rounded shadow">
                <span class="material-symbols-outlined me-2">search</span> Rechercher
            </button>
            <a href="{{ path('app_application_index') }}" 
                class="inline-flex items-center px-4 py-2 text-white bg-red-600 hover:bg-red-700 text-xs font-medium rounded shadow">
                <span class="material-symbols-outlined">backspace</span> Réinitialiser
            </a>
        </div>
    </div>

    {% if pagination|length == 0 %}
        <div class="mt-6 p-4 text-center text-gray-400 text-sm">
            Aucune candidature trouvée pour votre recherche.
        </div>
    {% endif %}

    {{ form_end(searchForm) }}
</div>

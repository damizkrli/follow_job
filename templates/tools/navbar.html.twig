<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

<nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 shadow" x-data="{ open: false }">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">

    <div class="flex items-center">
      <a href="#" class="text-2xl font-bold text-blue-600 dark:text-blue-400">FOLLOW JOB</a>
    </div>

    <div class="hidden md:flex space-x-6 items-center">
      <a href="{{ path('app_application_home') }}" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 text-sm font-medium transition">Accueil</a>
      <a href="{{ path('app_application_index') }}" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 text-sm font-medium transition">Candidatures</a>
      <a href="{{ path('app_contact_index') }}" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 text-sm font-medium transition">Contacts</a>

      {% if app.user %}
        <a href="{{ path('app_logout') }}" class="text-gray-700 dark:text-gray-200 hover:text-red-600 dark:hover:text-red-400 text-sm font-medium transition">Déconnexion</a>
      {% else %}
        <a href="{{ path('app_login') }}" class="text-gray-700 dark:text-gray-200 hover:text-green-600 dark:hover:text-green-400 text-sm font-medium transition">Connexion</a>
      {% endif %}

      <form method="get" action="{{ path('toggle_dark_mode') }}" class="flex items-center gap-2">
        <span class="material-symbols-outlined text-sm {{ app.session.get('dark_mode') ? 'text-gray-400' : 'text-yellow-500' }}">
          light_mode
        </span>
        <button
          type="submit"
          class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors focus:outline-none
                {{ app.session.get('dark_mode') ? 'bg-blue-600' : 'bg-gray-300' }}"
          aria-label="Basculer le mode sombre">
          <span class="inline-block h-4 w-4 transform rounded-full bg-white transition-transform duration-300 ease-in-out
            {{ app.session.get('dark_mode') ? 'translate-x-6' : 'translate-x-1' }}">
          </span>
        </button>
        <span class="material-symbols-outlined text-sm {{ app.session.get('dark_mode') ? 'text-blue-400' : 'text-gray-400' }}">
          dark_mode
        </span>
      </form>
    </div>

    <div class="md:hidden flex items-center">
      <button @click="open = !open" class="text-gray-700 dark:text-gray-200 focus:outline-none">
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path :class="{'hidden': open, 'block': !open }" class="block" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
          <path :class="{'block': open, 'hidden': !open }" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

  </div>

  <div 
    x-show="open"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 transform scale-95"
    x-transition:enter-end="opacity-100 transform scale-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 transform scale-100"
    x-transition:leave-end="opacity-0 transform scale-95"
    class="md:hidden"
  >
    <div class="flex flex-col space-y-4 py-4 items-start ms-5">
      <a href="{{ path('app_application_home') }}" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 text-lg font-medium transition">Accueil</a>
      <a href="{{ path('app_application_index') }}" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 text-lg font-medium transition">Candidatures</a>
      <a href="{{ path('app_contact_index') }}" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 text-lg font-medium transition">Contacts</a>

      <form method="get" action="{{ path('toggle_dark_mode') }}" class="flex items-center gap-2 pt-4">
        <span class="material-symbols-outlined text-sm {{ app.session.get('dark_mode') ? 'text-gray-400' : 'text-yellow-500' }}">
          light_mode
        </span>
        <button
          type="submit"
          class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors focus:outline-none
                {{ app.session.get('dark_mode') ? 'bg-blue-600' : 'bg-gray-300' }}"
          aria-label="Basculer le mode sombre"
        >
          <span
            class="inline-block h-4 w-4 transform rounded-full bg-white transition-transform duration-300 ease-in-out
                  {{ app.session.get('dark_mode') ? 'translate-x-6' : 'translate-x-1' }}"
          ></span>
        </button>
        <span class="material-symbols-outlined text-sm {{ app.session.get('dark_mode') ? 'text-blue-400' : 'text-gray-400' }}">
          dark_mode
        </span>
      </form>

      {% if app.user %}
        <a href="{{ path('app_logout') }}" class="text-gray-700 dark:text-gray-200 hover:text-red-600 dark:hover:text-red-400 text-lg font-medium transition">Déconnexion</a>
      {% else %}
        <a href="{{ path('app_login') }}" class="text-gray-700 dark:text-gray-200 hover:text-green-600 dark:hover:text-green-400 text-lg font-medium transition">Connexion</a>
      {% endif %}
    </div>
  </div>
</nav>

{% extends 'base.html.twig' %}

{% block title %}Ajouter une entreprise{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Ajouter une entreprise</h1>

    {{ form_start(form) }}

    <div class="space-y-12">
        <div class="border-b border-gray-200 pb-12">
            <h2 class="text-base font-semibold leading-7 text-gray-900">Informations générales</h2>
            <p class="mt-1 text-sm leading-6 text-gray-600">Saisissez les informations de l'entreprise à enregistrer.</p>

            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="sm:col-span-4">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.name, {
                            'attr': {
                                'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-sm placeholder:text-gray-400 placeholder:italic',
                                'placeholder': 'ex: Google'
                            }
                        }) }}
                    </div>
                </div>

                <div class="sm:col-span-6">
                    {{ form_label(form.activity, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.activity, {
                            'attr': {
                                'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-sm placeholder:text-gray-400 placeholder:italic',
                                'placeholder': 'Secteur d\'activité'
                            }
                        }) }}
                    </div>
                </div>

                <div class="sm:col-span-6">
                    {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.address, {
                            'attr': {
                                'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-sm placeholder:text-gray-400 placeholder:italic',
                                'placeholder': 'Adresse complète'
                            }
                        }) }}
                    </div>
                </div>

                <div class="sm:col-span-2">
                    {{ form_label(form.postalCode, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.postalCode, {
                            'attr': {
                                'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-sm placeholder:text-gray-400 placeholder:italic',
                                'placeholder': '75000'
                            }
                        }) }}
                    </div>
                </div>

                <div class="sm:col-span-4">
                    {{ form_label(form.city, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.city, {
                            'attr': {
                                'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-sm placeholder:text-gray-400 placeholder:italic',
                                'placeholder': 'Paris'
                            }
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-6 flex items-center justify-end gap-x-6">
        <a href="{{ path('app_company_index') }}" class="text-sm font-semibold text-gray-900">Annuler</a>
        <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
